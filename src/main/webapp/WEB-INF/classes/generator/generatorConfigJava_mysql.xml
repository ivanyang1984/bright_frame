<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <properties resource="config.properties"/>

  <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
    <property name="beginningDelimiter" value="`"/>
    <property name="endingDelimiter" value="`"/>

    <plugin type="${mapper.plugin}">
      <property name="mappers" value="${mapper.Mapper}"/>
    </plugin>

    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                    connectionURL="jdbc:mysql://localhost:3306/bright"
                    userId="root"
                    password="">
    </jdbcConnection>

    <javaModelGenerator targetPackage="generator.rml.model" targetProject="G:\work_code\bright\src\test\java"/>

    <sqlMapGenerator targetPackage="generator.rml.mappers"  targetProject="G:\work_code\bright\src\test\java"/>
	
    <javaClientGenerator targetPackage="generator.rml.mapper" targetProject="G:\work_code\bright\src\test\java" type="XMLMAPPER" />
 
    <table tableName="%">
	  <!-- <property name="useActualColumnNames" value="true"/> --> <!-- 保持列名与数据库一致，适合数据库列名为骆驼命名法的情况(如：userId) -->
<!--       <generatedKey column="id" sqlStatement="JDBC"/> -->
    </table>
  </context>
</generatorConfiguration>